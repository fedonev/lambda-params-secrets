/**
 * Main project TSConfig
 *
 * docs: https://www.typescriptlang.org/tsconfig
 * tsbases: https://github.com/tsconfig/bases/blob/main/bases
 */
{
  "compilerOptions": {
    // begin tsconfig bases/node18
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    // end tsconfig bases/node18
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "strictPropertyInitialization": false,
    "declaration": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.mock.ts",
    "**/*.test.ts",
    "node_modules",
    "dist",
    "scripts",
    "jest.config.ts"
  ]
}
